<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2">

    <com.example.praveensubramaniyam.silentapp.SwipeMenuListView
        android:id="@+id/listView"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/profileNameLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/profile_name_hint"/>

        <CheckBox
            android:id="@+id/isSilentEnabledLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/silent_mode"
            android:checked="true" />

        <CheckBox
            android:id="@+id/isViberateEnabledLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viberate_mode"
            android:checked="true" />

        <CheckBox
            android:id="@+id/isWifiEnabledLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wifi_off"
            android:checked="true" />

        <CheckBox
            android:id="@+id/isBluetoothEnabledLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bluetooth_off"
            android:checked="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/starttimeDescLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="START TIME"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"
            />


        <TextView
            android:id="@+id/starttimeLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to Add Start Time"
            android:onClick="addStartTime"/>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/endtimeDescLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="END TIME"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/endtimeLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to Add End Time"
            android:onClick="addEndTime"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/daysofweekDescLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DAYS OF WEEK"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/chooseDayOfWeekLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="chooseDayOfWeek"
            android:textSize="15dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/locationDescLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/locationLand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to Add Location"
            android:onClick="addAddress"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        </LinearLayout>



</LinearLayout>